{
  "name": "wise",
  "license": "UNLICENSED",
  "scripts": {
    "clean": "del-cli ./generated ./build",
    "codegen": "graph codegen",
    "build": "graph build",
    "make": "npm run clean && npm run codegen && npm run build",
    "prepare:mainnet": "mustache config/mainnet.json subgraph.template.yaml > subgraph.yaml",
    "prepare:ropsten": "mustache config/ropsten.json subgraph.template.yaml > subgraph.yaml",
    "deploy:mainnet": "graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ wise-foundation/wise",
    "deploy:ropsten": "graph deploy --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/ wise-foundation/wise-ropsten",
    "create-local": "graph create --node http://localhost:8020/ wise-foundation/wise",
    "remove-local": "graph remove --node http://localhost:8020/ wise-foundation/wise",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 wise-foundation/wise"
  },
  "dependencies": {},
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.19.0",
    "@graphprotocol/graph-ts": "^0.19.0",
    "del-cli": "^3.0.1",
    "mustache": "^4.0.1"
  }
}
